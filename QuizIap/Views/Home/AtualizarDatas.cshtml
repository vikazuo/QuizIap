@using IronBugCore.Web.Helpers
@{
    ViewBag.Title = "Perguntas";
}

@section Scripts
{
    <script src="@Url.ContentVersioned("js/atualizar-datas.js")" type="module"></script>
}

<div ng-controller="AtualizarDatasController" ng-init="iniciar()">
    <h2>@ViewBag.Title</h2>

    <div class="row">
        <div class="col-lg-3 mt-2">
            <div class="input-group">
                <input type="number" class="form-control" ng-model="valorInicial" min="1">
                <input type="number" class="form-control" ng-model="valorFinal" min="1">
            </div>
        </div>
        <div class="col-lg-3 mt-2">
            <input type="datetime-local" class="form-control" ng-model="dataInicial" placeholder="Buscar pergunta"/>
        </div>
        <div class="col-lg-3 mt-2">
            <input type="datetime-local" class="form-control" ng-model="dataFinal" placeholder="Buscar pergunta"/>
        </div>
        <div class="col-lg-3 mt-2">
            <button type="button" class="btn btn-success" ng-click="alterarDatas()">Alterar datas</button>
            <button type="button" class="btn btn-success" ng-click="zerarRespostas()">Zerar respostas</button>
        </div>
    </div>


    <table class="table table-striped table-sm mt-2">
        <thead>
        <tr>

            <th>Pergunta</th>
            <th>Data inicial</th>
            <th>Data final</th>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="pergunta in perguntas">

            <td ng-bind="pergunta.Id"></td>
            <td ng-bind="pergunta.DataDeLiberacao | shortDateTimeString"></td>
            <td ng-bind="pergunta.DataFinalDeLiberacao | shortDateTimeString"></td>
        </tr>
        </tbody>
    </table>


</div>